    <%= form.label :task_id %>
    <%= form.number_field :task_id %>
  </div>

  <div class="input-field">
    <%= form.label :date_of_order %>
    <%= form.date_select :date_of_order %>
  </div>

  <div class="input-field">
    <%= form.label :due_date %>
    <%= form.date_select :due_date %>
  </div>

  <div class="input-field">
    <%= form.label :total_price %>
    <%= form.number_field :total_price %>
  </div>

 <div class="actions">
    <%= form.submit :class=>"btn waves-effect waves-light" %>
