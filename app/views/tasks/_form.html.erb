<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="input-field">
    <%= form.label :cleaning_type %>
    <%= form.select :cleaning_type, options_for_select([['Dry Clean', 'Dry Clean'], ['Wash & Press', 'Wash & Press'], ['Pressing', 'Pressing']])%>
  </div>

  <div class="input-field">
    <%= form.label :cost %>
    <%= form.number_field :cost %>
  </div>

 <div class="actions">
    <%= form.submit :class=>"btn waves-effect waves-light" %>
    <%= link_to 'Cancel', tasks_path, :class => 'waves-effect waves-light btn red' %>
  </div>
<% end %>
